<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_quick_search"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="52dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="40dp"
            android:id="@+id/searchBtn"
            android:background="#fff"
            android:drawableTint="@color/colorPrimaryDark"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/search_small"
            android:layout_marginBottom="14dp"
            android:layout_alignBottom="@+id/editTextDialogUserInput"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

        <EditText
            android:id="@+id/editTextDialogUserInput"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/inputbox1"
            android:hint="Quick Search"
            android:maxLength="16"
            android:onClick="quickSearch"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"
            android:paddingTop="17dp"


            >

            <requestFocus />

        </EditText>
    </RelativeLayout>
</LinearLayout>