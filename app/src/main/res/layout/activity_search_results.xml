<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:expandable="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chris.mystats_univeristy.SearchResults">

    <com.andexert.expandablelayout.library.ExpandableLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        expandable:el_headerLayout="@layout/search_header"
        expandable:el_contentLayout="@layout/search_content"
        android:background= "#e74c3c"/>

    <com.andexert.expandablelayout.library.ExpandableLayoutListView
        android:id="@+id/listing"
        android:layout_below="@+id/first"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="match_parent"/>
</RelativeLayout>

