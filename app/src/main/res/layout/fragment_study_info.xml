<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:id="@+id/siChartTitle1"
        android:textColor="@color/oldBurgundy"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_centerHorizontal="true"
        android:text="@string/siChartTitle1"
        android:fontFamily=""
        android:textSize="20dp"

        android:textAlignment="center"
        android:layout_height= "wrap_content"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/sipie1"
        android:layout_below="@id/siChartTitle1"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

    <TextView android:id="@+id/siChartTitle2"
        android:layout_below="@id/sipie1"
        android:textColor="@color/oldBurgundy"
        android:background="@color/greenSheen"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="@string/siChartTitle2"
        android:fontFamily=""
        android:textSize="20dp"
        android:paddingBottom="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/sipie2"
        android:layout_below="@id/siChartTitle2"
        android:layout_width="match_parent"
        android:background="@color/greenSheen"
        android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

            />
        <TextView
            android:id="@+id/sistat1"
            android:padding="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/oldBurgundy"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/lecture_icon2"
            android:layout_below="@id/sipie2"/>

        <TextView
            android:id="@+id/sistat2"
            android:padding="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/oldBurgundy"
            android:textSize="20dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/coursework_icon2"
            android:layout_below="@+id/sistat1"/>

        <Space
            android:id="@+id/sispace4"
            android:background="@color/background"
            android:layout_below="@id/sistat2"
            android:layout_width="1dp"
            android:layout_height="15dp"/>

</RelativeLayout>
</ScrollView>