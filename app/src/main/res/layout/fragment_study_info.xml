<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView android:id="@+id/siChartTitle1"
        android:textColor="@color/oldBurgundy"
        android:background="@color/greenSheen"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="30dp"
        android:layout_centerHorizontal="true"
        android:text="Degree classifications students achieved"
        android:fontFamily=""
        android:textSize="20dp"

        android:textAlignment="center"
        android:layout_height= "wrap_content"/>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/sipie1"
        android:layout_below="@id/siChartTitle1"
        android:layout_width="match_parent"
        android:background="@color/greenSheen"
        android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

    <TextView android:id="@+id/siChartTitle2"
        android:layout_below="@id/sipie1"
        android:textColor="@color/oldBurgundy"
        android:background="@color/background"
        android:layout_width="wrap_content"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="What students are doing a year after the course"
        android:fontFamily=""
        android:textSize="20dp"
        android:paddingBottom="30dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        />
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/sipie2"
        android:layout_below="@id/siChartTitle2"
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

        <TextView android:id="@+id/aBitMoreStudyInfoTitle"
            android:layout_below="@id/sipie2"
            android:textColor="@color/oldBurgundy"
            android:background="@color/greenSheen"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:text="A bit more study info title"
            android:fontFamily=""
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sistat1"
            android:textSize="15dp"
            android:padding="20dp"
            android:background="@color/greenSheen"
            android:textColor="@color/oldBurgundy"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:layout_below="@+id/aBitMoreStudyInfoTitle"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sistat2"
            android:textSize="15dp"
            android:background="@color/greenSheen"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@+id/sistat1"
            />

        <Space
            android:id="@+id/sispace4"
            android:background="@color/greenSheen"
            android:layout_below="@id/sistat2"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

</RelativeLayout>
</ScrollView>