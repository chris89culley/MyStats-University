<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background"
    android:drawableTop="@android:color/black"
    android:drawableBottom="@android:color/black" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/table"
        >

        <TableRow
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pencil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pencil"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:padding="12sp"
                />

            <TextView
                android:id="@+id/mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Study mode :"
                android:textSize="12sp"
                android:layout_marginLeft="20sp"
                android:layout_marginTop="30sp"
                android:layout_alignRight="@id/pencil"
                android:textColor="#103649"
                android:padding="10dip"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/poundSign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dip"
            android:layout_marginLeft="15sp"
            android:textColor="@android:color/black"
            android:text="Â£"
            android:textSize="40dp"
            />


        <TextView
            android:id="@+id/salaryAfter6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mode"
            android:textColor="#103649"
            android:layout_alignRight="@id/poundSign"
            android:layout_marginLeft="20sp"
            android:text="salary after 6 months"
            android:textSize="12dp"
            />

        </TableRow>
        <TableRow>
            <ImageView
                android:id="@+id/satisfied"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/salaryAfter6"
                android:padding="12sp"
                android:layout_marginLeft="10sp"
                android:src="@drawable/satisfied"
                />

            <TextView
                android:id="@+id/overallSatisafaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/salaryAfter6"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="overall sat bla bla"
                android:gravity="center"
                android:textColor="#103649"
                android:layout_alignRight="@id/satisfied"
                android:padding="10dip"
                android:textSize="12sp"
                />

        </TableRow>

        <TableRow>

            <ImageView
                android:id="@+id/studyimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/overallSatisafaction"
                android:layout_marginLeft="10sp"
                android:padding="12dip"
                android:src="@drawable/study"
                />
            <TextView
                android:id="@+id/percentThatGoToWork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "percent that go to work"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="5sp"
                android:layout_alignRight="@id/studyimage"
                android:layout_below="@+id/overallSatisafaction"
                android:padding="10dip"
                android:textSize="12dp"
                android:textColor="#103649"
                />


        </TableRow>


    </TableLayout>


    <Button
        android:id="@+id/testButton"
        android:layout_width="match_parent"
        android:layout_below="@id/table"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:text="More stats"
        />


</RelativeLayout>