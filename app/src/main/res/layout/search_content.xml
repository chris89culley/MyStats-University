<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/background"
    android:drawableTop="@android:color/black"
    android:drawableBottom="@android:color/black"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border">


    <TextView
        android:id="@+id/mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mode"
        android:textSize="17dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="20sp"
        android:drawableLeft="@drawable/study"
        android:layout_marginTop="30sp"
        android:drawablePadding="10sp"
        android:textColor="@color/oldBurgundy"
        android:padding="10dip"
        />
        <TextView
            android:id="@+id/overallSatisafaction"
            android:layout_width="wrap_content"
            android:layout_alignLeft="@+id/mode"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mode"
            android:text="@string/overall_satisafaction"
            android:textColor="@color/oldBurgundy"
            android:drawablePadding="10sp"
            android:drawableLeft="@drawable/percent"
            android:gravity="center_vertical"
            android:padding="10dip"
            android:textSize="17dp"
            />
    <TextView
        android:id="@+id/salaryAfter6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/overallSatisafaction"
        android:gravity="center_vertical"
        android:padding="10dip"
        android:textColor="@color/oldBurgundy"
        android:drawableLeft="@drawable/creditcard"
        android:layout_alignLeft="@+id/mode"
        android:drawablePadding="10sp"
        android:text="@string/salary_after_6"
        android:textSize="17dp"
        />


    <TextView
        android:id="@+id/percentThatGoToWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "percent that go to work"
        android:drawableLeft="@drawable/workorstudy"
        android:layout_below="@+id/salaryAfter6"
        android:padding="10dip"
        android:layout_alignLeft="@+id/mode"
        android:textColor="@color/oldBurgundy"
        android:drawablePadding="10sp"
        android:textSize="17dp"
        android:gravity="center_vertical"
        />


    <Button
        android:id="@+id/moreStatsButton"
        android:layout_below="@+id/percentThatGoToWork"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/oldBurgundy"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        android:text="More stats"
        />


    </RelativeLayout>
</RelativeLayout>