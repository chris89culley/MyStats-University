<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.chris.mystats_univeristy.HomePage"
    android:id="@+id/activity_home_page">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/space">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:text="Basic Search"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/courseNameEntered"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:hint="Subject or Course"
            android:inputType="text"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/locationNameEntered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/courseNameEntered"
            android:layout_alignRight="@+id/courseNameEntered"
            android:layout_below="@+id/courseNameEntered"
            android:hint="Location or institution"

            android:inputType="text"
            android:textSize="18sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />




        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/textInputLayout">

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/radiusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/courseNameEntered"
            android:layout_alignRight="@+id/courseNameEntered"
            android:text="0 km"
            android:layout_below="@+id/locationNameEntered"
            android:layout_weight="1" />

        <SeekBar
            android:id="@+id/radiusBar"
            android:layout_below="@+id/locationNameEntered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/courseNameEntered"
            android:layout_alignRight="@+id/courseNameEntered"
            />


        <RadioGroup
            android:id="@+id/coursetype"
            android:layout_below="@+id/radiusBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/fulltime"
                android:layout_alignLeft="@+id/courseNameEntered"
                android:layout_alignRight="@+id/courseNameEntered"
                android:text="full time courses"
                android:checked="true" />

            <RadioButton
                android:id="@+id/parttime"
                android:layout_alignLeft="@+id/courseNameEntered"
                android:layout_alignRight="@+id/courseNameEntered"
                android:text="part time courses" />

        </RadioGroup>


        <Button
            android:id="@+id/simSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="77dp"
            android:text="Search" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        app:menu="@menu/navigation"
        android:layout_gravity="start" />

    </android.support.v4.widget.DrawerLayout>
