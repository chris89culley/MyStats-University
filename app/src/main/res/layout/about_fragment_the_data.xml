<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_view_center"
                android:lineSpacingExtra="8dp"
                android:textSize="17dp"
                android:textColor="#3B322C"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:id="@+id/data_intro"
                android:text="@string/data_intro"/>


            <TextView
                style="@style/text_view_center"
                android:textColorLink="#3B322C"
                android:lineSpacingExtra="8dp"
                android:textSize="17dp"
                android:textColor="#3B322C"
                android:padding="15dp"
                android:id="@+id/fire"
                android:background="@color/greenSheen"
                android:drawableLeft="@drawable/firebase_icon"
                android:textAlignment="textStart"
                android:layout_below="@+id/data_intro"
                android:text="@string/firebase"/>

            <TextView
                style="@style/text_view_right"
                android:textColorLink="#3B322C"
                android:lineSpacingExtra="8dp"
                android:textSize="17dp"
                android:padding="15dp"
                android:textColor="#3B322C"
                android:background="@color/background"
                android:id="@+id/hefa"
                android:layout_below="@+id/fire"
                android:textAlignment="textStart"
                android:drawableLeft="@drawable/hesa_logo"
                android:text="@string/hesa"/>

            <TextView
                style="@style/text_view_left"
                android:textColorLink="#3B322C"
                android:lineSpacingExtra="8dp"
                android:textSize="17dp"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="#3B322C"
                android:layout_below="@+id/hefa"
                android:id="@+id/nss"
                android:background="@color/greenSheen"
                android:drawableLeft="@drawable/icon_nss"
                android:text="@string/national_student_survey"/>


            <TextView
                style="@style/text_view_right"
                android:textColorLink="#3B322C"
                android:lineSpacingExtra="8dp"
                android:textSize="17dp"
                android:padding="15dp"
                android:textAlignment="textStart"
                android:textColor="#3B322C"
                android:layout_below="@+id/nss"
                android:id="@+id/dlhe"
                android:background="@color/background"
                android:drawableLeft="@drawable/dlhe_logo"
                android:text="@string/dlfh"/>



        </RelativeLayout>
    </ScrollView>
</LinearLayout>