<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_choosing_course_intro"
                android:text="@string/ucas_tips_choosing_course_intro"
                />

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_career"
                android:background="@color/greenSheen"
                android:layout_below="@+id/ucas_tips_choosing_course_intro"
                android:text="@string/ucas_tips_career"
                android:drawableTop="@drawable/door_icon1"/>


            <TextView
                style="@style/text_view_center"

                android:id="@+id/ucas_tips_hobby"
                android:layout_below="@+id/ucas_tips_career"
                android:text="@string/ucas_tips_hobby"
                android:drawableTop="@drawable/door_icon1"/>

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_entry_requirments"
                android:background="@color/greenSheen"

                android:layout_below="@+id/ucas_tips_hobby"
                android:text="@string/ucas_tips_entry_requirments"
                android:drawableTop="@drawable/door_icon1"/>

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_location"
                android:layout_below="@+id/ucas_tips_entry_requirments"
                android:text="@string/ucas_tips_location"
                android:drawableTop="@drawable/map_icon"/>

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_modules"
                android:background="@color/greenSheen"
                android:layout_below="@+id/ucas_tips_location"
                android:text="@string/ucas_tips_modules"
                android:drawableTop="@drawable/door_icon1"/>

            <TextView
                style="@style/text_view_center"
                android:id="@+id/ucas_tips_open_days"
                android:layout_below="@id/ucas_tips_modules"
                android:text="@string/ucas_tips_open_days"
                android:drawableTop="@drawable/research"
                />






        </RelativeLayout>
    </ScrollView>
</LinearLayout>