<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView android:id="@+id/esChartTitle1"
            android:textColor="@color/oldBurgundy"
            android:background="@color/greenSheen"
            android:layout_width="wrap_content"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:text="Percent employed six months after completing the course"
            android:fontFamily=""
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_height="wrap_content"
            />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/espie1"
            android:layout_below="@id/esChartTitle1"
            android:background="@color/greenSheen"
            android:layout_width="match_parent"
            android:padding="80dp"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

        <TextView android:id="@+id/averageSalaryTitle"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@id/espie1"
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/tealDeer"
            android:text="Average salaries"
            android:fontFamily=""
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/animText1"
            android:layout_centerHorizontal="true"
            android:paddingTop="30dp"
            android:padding="20dp"
            android:drawableLeft="@drawable/poundsign"
            android:drawablePadding="10dp"
            android:textSize="15dp"
            android:background="@color/tealDeer"
            android:layout_below="@+id/averageSalaryTitle"
            android:textColor="@color/oldBurgundy"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/animText2"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:drawablePadding="10dp"
            android:background="@color/tealDeer"
            android:drawableLeft="@drawable/poundsign"
            android:textColor="@color/oldBurgundy"
            android:textSize="15dp"
            android:layout_below="@+id/animText1"
            />



        <TextView android:id="@+id/monthlyBreakdownTitle"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@id/animText2"
            android:background="@color/background"
            android:layout_width="wrap_content"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:text="Breakdown of average monthly wages"
            android:fontFamily=""
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/esWageAfterRepayments"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:background="@color/background"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@+id/monthlyBreakdownTitle"
             />

        <Space
            android:id="@+id/esspace3"
            android:layout_below="@+id/esWageAfterRepayments"
            android:background="@color/background"
            android:layout_width="1dp"
            android:paddingTop="30dp"
            android:layout_height="20dp" />


    </RelativeLayout>
</ScrollView>