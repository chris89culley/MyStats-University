<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView android:id="@+id/esPageOverView"
            android:textColor="#FFFFFF"
            android:background="#3C6478"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="On this page you'll find the amount that makes it to your pocket each month!"
            android:fontFamily=""
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_height="90dp" />

        <TextView android:id="@+id/esChartTitle1"
            android:layout_below="@id/esPageOverView"
            android:textColor="#FFFFFF"
            android:background="#43ABC9"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Employment six months after completeing the course"
            android:fontFamily=""
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_height="70dp" />
        <Space
            android:id="@+id/esspace1"
            android:layout_below="@id/esChartTitle1"
            android:layout_width="1dp"
            android:layout_height="30dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/espie1"
            android:layout_below="@id/esspace1"
            android:layout_width="match_parent"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

        <Space
            android:id="@+id/esspace2"
            android:layout_below="@id/espie1"
            android:layout_width="1dp"
            android:layout_height="30dp" />





        <TextView
            android:id="@+id/esStatText2"
            android:textColor="#FFFFFF"
            android:background="#3C6478"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/esStatText1"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/esStatText1"
            android:textColor="#FFFFFF"
            android:background="#43ABC9"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/espie1"

            android:layout_marginTop="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/esStatIcon1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/poundsign"
            android:adjustViewBounds="false"
            android:layout_below="@+id/esspace2"
            android:layout_alignLeft="@+id/esStatText1"
            android:layout_alignStart="@+id/esStatText1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/esStatIcon1"
            android:layout_alignLeft="@+id/esStatText1"
            android:layout_alignStart="@+id/esStatText1"
            android:layout_marginBottom="19dp"
            android:id="@+id/animText1"
            android:textSize="15dp"
            android:fontFamily="sans-serif"
            android:textColor="#FFFFFF"
            android:paddingLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp"
            android:id="@+id/animText2"
            android:layout_alignBottom="@+id/esStatIcon2"


            android:textSize="15dp"
            android:textColor="#FFFFFF"
            android:paddingLeft="40dp"
            />

        <ImageView
            android:id="@+id/esStatIcon2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/poundsign"
            android:layout_below="@+id/esStatText1"
            android:layout_toRightOf="@+id/esspace2"
            android:layout_toEndOf="@+id/esspace2"
            android:layout_marginTop="9dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/esWageAfterRepayments"
            android:textSize="15dp"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="#666666"
            android:layout_below="@+id/esStatText2"
             />

        <Space
            android:id="@+id/esspace3"
            android:layout_below="@+id/esWageAfterRepayments"
            android:layout_width="1dp"
            android:layout_height="30dp" />


    </RelativeLayout>
</ScrollView>