<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/esRelativeLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/espie1"
                android:layout_below="@+id/esChartTitle1"
                android:background="@color/background"
                android:layout_width="match_parent"
                android:padding="80dp"
                android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>


        <TextView android:id="@+id/esChartTitle1"
            android:textColor="@color/oldBurgundy"
            android:background="@color/background"
            android:layout_width="wrap_content"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/esChartTitle1"
            android:fontFamily=""
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_height="wrap_content"
            />


        <TextView android:id="@+id/averageSalaryTitle"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@+id/espie1"
            android:layout_width="match_parent"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:background="@color/greenSheen"
            android:text="@string/average_salary_title"
            android:fontFamily=""
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/animText1"
            android:padding="15dp"
            android:textColor="@color/oldBurgundy"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/cash_icon"
            android:layout_below="@+id/averageSalaryTitle"/>


        <TextView
            android:id="@+id/animText2"
            android:padding="15dp"
            android:textColor="@color/oldBurgundy"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/money_bag_icon"
            android:layout_below="@+id/animText1"/>

        <TextView android:id="@+id/monthlyBreakdownTitle"
            android:textColor="@color/oldBurgundy"
            android:layout_below="@id/animText2"
            android:layout_width="match_parent"
            android:background="@color/greenSheen"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:text="@string/monthly_breakdown_title"
            android:fontFamily=""
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/monthlyBreakdownAfterTax"
            android:padding="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/background"
            android:textColor="@color/oldBurgundy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/wallet_icon2"
            android:layout_below="@+id/monthlyBreakdownTitle"/>


        <TextView
            android:id="@+id/monthlyBreakdownLoanrepay"
            android:padding="15dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@color/background"
            android:textColor="@color/oldBurgundy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/credit_card_icon2"
            android:layout_below="@+id/monthlyBreakdownAfterTax"/>

        <TextView
            android:id="@+id/monthlyBreakdownTax"
            android:padding="15dp"
            android:paddingBottom="80dp"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/oldBurgundy"
            android:background="@color/background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/envelope_icon"
            android:layout_below="@+id/monthlyBreakdownLoanrepay"/>
        <Space
            android:id="@+id/space1"
            android:layout_below="@+id/monthlyBreakdownTax"
            android:layout_width="1dp"
            android:layout_height="15dp"/>
    </RelativeLayout>
</ScrollView>