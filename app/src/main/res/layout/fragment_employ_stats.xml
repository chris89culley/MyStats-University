<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView android:id="@+id/esChartTitle1"
            android:textColor="@color/oldBurgundy"
            android:background="@color/greenSheen"
            android:layout_width="wrap_content"
            android:padding="30dp"
            android:layout_centerHorizontal="true"
            android:text="Percent employed six months after completing the course"
            android:fontFamily=""
            android:textSize="20dp"

            android:textAlignment="center"
            android:layout_height="wrap_content"
            />


        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/espie1"
            android:layout_below="@id/esChartTitle1"
            android:background="@color/greenSheen"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="300dp"></com.github.mikephil.charting.charts.PieChart>

        <Space
            android:id="@+id/esspace2"
            android:layout_below="@id/espie1"
            android:background="@color/background"
            android:layout_width="1dp"
            android:layout_height="30dp" />





        <TextView
            android:id="@+id/esStatText2"
            android:textColor="@color/oldBurgundy"
            android:background="@color/background"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:drawableLeft="@drawable/poundsign"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/esStatText1"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/esStatText1"
            android:textColor="@color/oldBurgundy"
            android:background="@color/background"
            android:drawableLeft="@drawable/poundsign"
            android:textSize="30dp"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/esspace2"
            android:layout_marginTop="19dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/esStatText2"
            android:id="@+id/animText1"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:textColor="@color/oldBurgundy"
            android:fontFamily="sans-serif"
            android:paddingLeft="60dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/animText2"
            android:layout_alignBottom="@+id/esStatText2"
            android:layout_centerHorizontal="true"
            android:textSize="15dp"
            android:paddingLeft="60dp"
            android:textColor="@color/oldBurgundy"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/esWageAfterRepayments"
            android:textSize="15dp"
            android:paddingTop="30dp"
            android:layout_centerHorizontal="true"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="#666666"
            android:layout_below="@+id/esStatText2"
             />

        <Space
            android:id="@+id/esspace3"
            android:layout_below="@+id/esWageAfterRepayments"
            android:background="@color/greenSheen"
            android:layout_width="1dp"
            android:paddingTop="30dp"
            android:layout_height="20dp" />


    </RelativeLayout>
</ScrollView>