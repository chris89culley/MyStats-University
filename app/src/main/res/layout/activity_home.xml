<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:id="@+id/drawerLayout">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >

                <com.ogaclejapan.arclayout.ArcLayout
                    android:id="@+id/arc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:arc_freeAngle="true"
                    app:arc_radius="155sp"
                    app:arc_axisRadius="150sp"
                    app:arc_origin="center"
                    >


                    <Button
                        android:id="@+id/aboutbutton"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:textSize="11dp"
                        android:text="@string/about_button"
                        android:gravity="bottom|center"
                        android:paddingBottom="20dp"
                        android:textColor="#3B322C"
                        android:background="@drawable/aboutbutton"
                        app:arc_angle="60"
                        />
                    <Button
                        android:id="@+id/ucastipbutton"
                        android:textColor="#3B322C"
                        android:text="@string/ucas_tip_button"
                        app:arc_angle="20"
                        android:layout_height="85dp"
                        android:layout_width="85dp"
                        android:background="@drawable/ucastips"
                        android:gravity="bottom|center"
                        android:textSize="11dp"
                        android:paddingBottom="25dp"
                        />


                    <Button
                    android:id="@+id/quicksearchbutton"
                    android:text="@string/quick_search_button"
                    android:layout_height="85dp"
                    android:layout_width="85dp"
                    app:arc_angle="-20"
                    android:textSize="11dp"
                        android:textColor="#3B322C"
                    android:gravity="bottom|center"
                    android:paddingBottom="25dp"
                    android:background="@drawable/quicksearchbutton"
                    />


                    <Button
                        android:id="@+id/recentsearchbutton"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:textColor="#3B322C"
                        android:background="@drawable/searchbutton"
                        app:arc_angle="-60"
                        android:textSize="11dp"
                        android:text="@string/recent_search_button"
                        android:gravity="bottom|center"
                        android:paddingBottom="10dp"
                        />



                </com.ogaclejapan.arclayout.ArcLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="90dp"
                    android:scaleType="centerInside"
                    android:paddingTop="80dp"
                    android:paddingLeft="73dp"
                    android:paddingRight="60dp"
                    android:id="@+id/person"
                    android:src="@drawable/student"
                    />



            </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
