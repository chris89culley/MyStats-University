<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#94E8B4"
    android:id="@+id/drawerLayout">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                >

                <com.ogaclejapan.arclayout.ArcLayout
                    android:id="@+id/arc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:arc_freeAngle="true"
                    android:layout_marginTop="10dp"
                    app:arc_radius="250dp"
                    app:arc_axisRadius="160dp"
                    app:arc_origin="center"
                    >

                    <Button
                        android:id="@+id/ucastipbutton"
                        android:textColor="#254F63"
                        android:text="ucas tips"
                        app:arc_angle="40"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        android:background="@drawable/ucastips"
                        android:gravity="bottom|center"
                        android:textSize="10dp"
                        android:paddingBottom="25dp"
                        />

                    <Button
                        android:id="@+id/accountbutton"
                        android:textColor="#254F63"
                        android:text="account"
                        android:layout_height="90dp"
                        android:background="@drawable/accountbutton"
                        android:layout_width="90dp"
                        android:gravity="bottom|center"
                        android:textSize="10dp"
                        android:paddingBottom="25dp"
                        app:arc_angle="-40"
                        />

                    <Button
                        android:id="@+id/advancedsearchbutton"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textColor="#254F63"
                        android:background="@drawable/searchbutton"
                        app:arc_angle="0"
                        android:textSize="10dp"
                        android:text="advanced \n search"
                        android:gravity="bottom|center"
                        android:paddingBottom="10dp"
                        />

                    <Button
                        android:id="@+id/quicksearchbutton"
                        android:text="quick search"
                        android:layout_height="90dp"
                        android:layout_width="90dp"
                        app:arc_angle="-80"
                        android:textSize="10dp"
                        android:textColor="#254F63"
                        android:gravity="bottom|center"
                        android:paddingBottom="25dp"
                        android:background="@drawable/quicksearchbutton"
                        />

                    <Button
                        android:id="@+id/aboutbutton"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:textSize="10dp"
                        android:text="about"
                        android:gravity="bottom|center"
                        android:paddingBottom="20dp"
                        android:textColor="#254F63"
                        android:background="@drawable/aboutbutton"
                        app:arc_angle="80"
                        />

                </com.ogaclejapan.arclayout.ArcLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="80dp"
                    android:scaleType="centerInside"
                    android:paddingTop="60dp"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"
                    android:id="@+id/person"
                    android:src="@drawable/student"
                    />



            </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
